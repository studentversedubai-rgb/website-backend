# Server Configuration
PORT=3000
NODE_ENV=production

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OTP Configuration
OTP_SECRET=your_random_secret_string_here
OTP_TTL_SECONDS=600
OTP_MAX_ATTEMPTS=5

# Rate Limiting
IP_RATE_LIMIT_WINDOW_SECONDS=60
IP_RATE_LIMIT_MAX_REQUESTS=20

# Redis Configuration (Upstash)
REDIS_URL=your_redis_url_here

# Email Provider Configuration
# Options: 'resend' or 'ses'
# Default: 'resend' (recommended for production)
EMAIL_PROVIDER=resend

# Resend Configuration (Primary Email Provider)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM=no-reply@yourdomain.com

# Amazon SES Configuration (Alternative Email Provider - Optional)
AWS_REGION=eu-north-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
SES_FROM_EMAIL=no-reply@yourdomain.com
